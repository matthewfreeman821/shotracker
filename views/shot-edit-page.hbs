<div class="container">
    <h1>Shot Tracker <br> Edit a Shot Record</h1>
    <form action="/record/{{medid}}/{{shotid}}" method="POST">
        <input type="date" name="ShotTime" value="{{shottime}}" placeholder="YYYY/MM/DD HH:MM:SS" class="input">
        <input type="text" name="ShotLocation" value="{{shotlocation}}" placeholder="Shot Location" class="input">
        <textarea name="Notes" cols="30" rows="10" placeholder="Notes" class="input">{{notes}}</textarea>
        <br>
        <input type="submit" class="button is-primary">
        <br>
        <input type="reset" class="button is-warning">
    </form>
</div>
<div class="container">
    <button class="button is-info">
        <a href="/record/{{medid}}">Return to Record Page</a>
    </button>
    <br>
    <button class="button is-success">
        <a href="/">Return Home</a>
    </button>
    <footer>
        &copy; 2018 Matt and Bhisma
    </footer>
</div>