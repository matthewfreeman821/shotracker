<div class="container">
    <img src="/images/Logo.png" alt="Shot Tracker" srcset="">
    {{#each Shot}} 
        <form>
            <input type="text" name="ShotTime" value="{{shottime}}" placeholder="YYYY/MM/DD HH:MM:SS" class="input">
            <input type="text" name="ShotLocation" value="{{shotlocation}}" placeholder="Shot Location" class="input">
            <textarea name="Notes" id="" cols="30" rows="10" class="textarea">{{notes}}</textarea>
        </form>
        <br>
        <div class="side">
            <button class="button is-light">
            <a href="/record/{{medid}}/{{shotid}}">Edit Record</a>
            </button>
            <br>
            <button class="button is-danger">
            <a href="/deleterecord/{{medid}}/{{shotid}}">Delete Shot Record</a>
            </button>
        </div>
        <br>
    {{/each}}
</div>
<div class="container">
    <button class="button is-success">
        <a href="/">Return Home</a>
    </button>
    <br>
    <button class="button is-primary">
        <a href="/newrecord/{{medid}}">Add New Shot Record</a>
    </button>
    <footer>
        &copy; 2018 Matt and Bhisma
    </footer>
</div>